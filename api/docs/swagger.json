    "definitions": {
        "github_com_aceextension_identity_dto.AuthResponse": {
            "type": "object",
            "properties": {
                "accessToken": {
                    "type": "string"
                },
                "refreshToken": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/github_com_aceextension_identity_dto.UserResponse"
                }
            }
        },
        "github_com_aceextension_identity_dto.ChangePasswordDTO": {
            "type": "object",
            "required": [
                "newPassword",
                "oldPassword"
            ],
            "properties": {
                "newPassword": {
                    "type": "string",
                    "minLength": 6
                },
                "oldPassword": {
                    "type": "string"
                }
            }
        },
        "github_com_aceextension_identity_dto.ForgotPasswordDTO": {
            "type": "object",
            "required": [
                "identifier"
            ],
            "properties": {
                "identifier": {
                    "type": "string"
                }
            }
        },
        "github_com_aceextension_identity_dto.InviteUserDTO": {
            "type": "object",
            "required": [
                "role"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "phone": {
                    "type": "string",
                    "maxLength": 15,
                    "minLength": 10
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "owner",
                        "manager",
                        "staff",
                        "admin"
                    ]
                }
            }
        },
        "github_com_aceextension_identity_dto.JoinTenantDTO": {
            "type": "object",
            "required": [
                "name",
                "password",
                "token"

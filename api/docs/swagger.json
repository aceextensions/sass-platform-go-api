            "type": "object",
            "required": [
                "identifier",
                "newPassword",
                "otp"
            ],
            "properties": {
                "identifier": {
                    "type": "string"
                },
                "newPassword": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 6
                },
                "otp": {
                    "type": "string"
                }
            }
        },
        "github_com_aceextension_identity_dto.UserListResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",

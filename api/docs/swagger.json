            "type": "object",
            "required": [
                "refreshToken"
            ],
            "properties": {
                "refreshToken": {
                    "type": "string"
                }
            }
        },
        "github_com_aceextension_identity_dto.RegisterTenantDTO": {
            "type": "object",
            "required": [
                "ownerName",
                "password",
                "phone",
                "tenantName"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "ownerName": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "password": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 6
                },
                "phone": {
                    "type": "string",
                    "maxLength": 15,
                    "minLength": 10
                },
                "tenantName": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 3
                }
            }
